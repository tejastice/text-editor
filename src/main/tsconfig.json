{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "../../dist/main",
    "rootDir": ".",
    "noEmit": false,
    "jsx": "preserve",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "composite": true
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "../../dist"
  ]
}