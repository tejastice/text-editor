{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "../../dist/main",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "lib": ["ES2020"],
    "types": ["node", "electron"]
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "../../dist"
  ]
}